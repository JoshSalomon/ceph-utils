  <workflow>

    <workstage name="init">
      <work type="init" workers="100" config="containers=r(1,3000)" />
    </workstage>

    <workstage name="prepare">
      <work type="prepare" workers="100" config="containers=r(1,3000);objects=r(#ITBEGIN01#,#ITEND01#);sizes=c(4)KB" />
    </workstage>

    <workstage name="main">
      <work name="main" workers="100" runtime="10">
        <operation type="read" ratio="20" config="containers=u(1,3000);objects=u(#ITBEGIN01#,#ITEND01#)" />
        <operation type="write" ratio="80" config="containers=u(1,3000);objects=u(#ITBEGIN01#,#ITEND01#);sizes=c(4)KB" />
      </work>
    </workstage>

    <workstage name="cleanup">
      <work type="cleanup" workers="100" config="containers=r(1,3000);objects=r(#ITBEGIN01#,#ITEND01#)" />
    </workstage>

    <workstage name="dispose">
      <work type="dispose" workers="100" config="containers=r(1,3000)" />
    </workstage>

  </workflow>

</workload>
